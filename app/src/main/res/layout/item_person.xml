<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_weight="0.7"
        android:layout_height="wrap_content"
        android:background="@color/gray_soft"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:id="@+id/TV_fullName"
            android:text="Nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/TV_rut"
            android:text="RUT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/white_800" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_marginTop="1dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="right"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@color/gray_soft"
        android:layout_weight="0.3">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginRight="22dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/gray_soft"
            >
        <ImageView
            android:id="@+id/IV_checkin"
            android:layout_width="24dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_check_solid"
            app:tint="@color/purple" />
        <ImageView
            android:id="@+id/IV_checkinLocal"
            android:layout_width="24dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_check_solid"
            app:tint="@color/white_500" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

