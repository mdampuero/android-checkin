<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">
        <TextView
            android:id="@+id/scan_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:paddingBottom="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/SETTING"></TextView>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:id="@+id/LL_eventName"
            app:layout_constraintTop_toBottomOf="@id/scan_title"
            android:orientation="horizontal"
            android:background="@color/gray_soft"
            android:layout_height="wrap_content">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"

                android:layout_marginTop="0dp"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/TV_eventName"
                    android:text="@string/EVENT_NAME"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/TV_eventNameValue"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white_500" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:id="@+id/LL_eventCode"
            app:layout_constraintTop_toBottomOf="@id/LL_eventName"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:background="@color/gray_soft"
            android:layout_height="wrap_content">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"

                android:layout_marginTop="0dp"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/TV_eventCode"
                    android:text="@string/EVENT_CODE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/TV_eventCodeValue"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white_500" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:id="@+id/LL_eventID"
            app:layout_constraintTop_toBottomOf="@id/LL_eventCode"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:background="@color/gray_soft"
            android:layout_height="wrap_content">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"

                android:layout_marginTop="0dp"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/TV_eventID"
                    android:text="@string/EVENT_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/TV_eventIDValue"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white_500" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:id="@+id/LL_checkInBySearch"
            app:layout_constraintTop_toBottomOf="@id/LL_eventID"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:background="@color/gray_soft"
            android:layout_height="wrap_content">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"

                android:layout_marginTop="0dp"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/TV_checkInBySearch"
                    android:text="@string/CHECKIN_BY_SEARCH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/TV_checkInBySearchValue"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white_500" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:id="@+id/LL_request"
            app:layout_constraintTop_toBottomOf="@id/LL_checkInBySearch"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:background="@color/gray_soft"
            android:layout_height="wrap_content">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"

                android:layout_marginTop="0dp"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/TV_request"
                    android:text="@string/REQUEST_MORE_INFO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/TV_requestValue"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white_500" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:id="@+id/LL_clearDatabase"
            app:layout_constraintTop_toBottomOf="@id/LL_request"
            android:orientation="horizontal"
            android:background="@color/gray_soft"
            android:layout_height="wrap_content">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/TV_clearDatabase"
                    android:text="@string/CLEAR_DATABASE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/TV_clearDatabaseValue"
                    android:text="@string/CLEAR_DATABASE_DESCRIPTION"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white_500" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/BT_clearDatabase"
                android:layout_width="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="0.2"
                app:layout_constraintTop_toBottomOf="@id/scan_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="match_parent"
                android:background="@color/pink"
                android:padding="0dp"
                android:text="@string/OK">
            </androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>